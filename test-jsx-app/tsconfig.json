{
  "compilerOptions": {
    "lib": [
      "ES2020",
      "DOM"
    ],
    "target": "ES2020",
    "module": "ES2020",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "jsxImportSource": "tuix",
    "allowJs": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": false,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "."
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}