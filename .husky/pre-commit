# Check if any checks failed
if [ $? -ne 0 ]; then
  echo "âŒ Pre-commit checks failed. Please fix them before committing."
  echo "ğŸ’¡ Run 'bun run check:fix' to auto-fix formatting and some linting issues"
  echo "ğŸ’¡ Run 'bun run typecheck:tsc' to see type errors"
