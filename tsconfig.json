{
  "compilerOptions": {
    // Environment setup & latest features
    "lib": ["ES2020", "DOM"],
    "target": "ES2020",
    "module": "ES2020",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "jsxImportSource": ".",
    "allowJs": true,
    "downlevelIteration": true,

    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": false,
    "noEmit": true,

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    // Some stricter flags (disabled by default)
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false,

    // Base URL for module resolution
    "baseUrl": ".",
    
    // Path mapping for @tuix/* packages
    "paths": {
      "@tuix/core": ["./packages/core/src"],
      "@tuix/cli": ["./packages/cli/src"],
      "@tuix/components": ["./packages/components/src"],
      "@tuix/jsx": ["./packages/jsx/src"],
      "@tuix/reactive": ["./packages/reactive/src"],
      "@tuix/services": ["./packages/services/src"],
      "@tuix/layout": ["./packages/layout/src"],
      "@tuix/styling": ["./packages/styling/src"],
      "@tuix/testing": ["./packages/testing/src"]
    }
  },
  "include": [
    "src/**/*",
    "examples/**/*",
    "**/*.test.ts",
    "**/*.tuix"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "research"
  ]
}
